{% extends "base.html.twig" %}

    {% block content %}
    <div class="d-flex flex-row flex-wrap justify-content-center align-items-center w-100">

    {% for doctor in doctors %}
          <div class="card" style="width: 25rem; margin:50px;">
            <img class="card-img-top" src="{{ asset('/image/doctor/doctor_' ~ doctor.id ~ '.jpg') }}" alt="{{doctor.name}} {{doctor.surname}} " onerror="this.onerror=null; this.src='/image/doctor/unknown.jpg'" height="250px" alt="Card image cap">
            <div class="card-body">
              <h5 class="card-title">{{doctor.name}} {{doctor.surname}}</h5>
              <p class="card-text">{{doctor.description}}</p>
              <a href="#" class="btn btn-primary">Przejd≈∫ do tego lekarza</a>
            </div>
        </div>
    {% endfor %}
 
    
    <div class="w-100 d-flex justify-content-center ">{% include 'parts/_pagination.html.twig' %} </div>

    {% endblock %}
