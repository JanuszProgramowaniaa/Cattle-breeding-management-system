{% extends 'base.html.twig' %}

{% block title %}Zaloguj się!{% endblock %}

{% block content %}

<form method="post">
    {% if error %}
        <div class="alert alert-danger d-flex justify-content-center">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal d-flex justify-content-center">Zaloguj się</h1>
    <div class="form-outline mb-4 d-flex justify-content-center">
        <div class="w-25">
            <label for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
        </div>
    </div>
    <div class="form-outline mb-4 d-flex justify-content-center">
        <div class="w-25">
            <label for="inputPassword">Password</label>
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
        </div>
    </div>
    
    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

   
    {# <div class="form-outline mb-4 d-flex justify-content-center">
        <div class="w-25 d-flex justify-content-center">
            <div class="checkbox mb-3">
                <label>
                    <input class="form-check-input" type="checkbox" name="_remember_me"> Zapamiętaj mnie
                </label>
            </div>
        </div>
    </div> #}

   
    <div class="form-outline mb-4 d-flex justify-content-center">
        <div class="w-25 d-flex justify-content-center">
            <button class="btn btn-lg btn-primary" type="submit">
                Zaloguj się
            </button>
        </div>
    </div>
</form>
{% endblock %}


