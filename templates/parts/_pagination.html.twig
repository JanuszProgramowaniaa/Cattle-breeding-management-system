{% if maxPages > 1 %}
<nav aria-label="..." class="mr-5 mt-5">
<ul class="pagination">
    {# `«` arrow  #}
    <li {{ curentPage == 1 ? 'class="page-item disabled"' : 'class="page-item"'  }}>
        <a class="page-link" href="{{ path('doctor', {page: curentPage-1 < 1 ? 1 : curentPage-1}) }}">«</a>
    </li>

    {# Render each page number #}
    {% for i in 1..maxPages %}
    <li {{ curentPage == i ? 'class="page-item active"' }}>
    <a class="page-link" href="{{ path('doctor', {page: i}) }}">{{ i }}</a>
    </li>
    {% endfor %}

    {# `»` arrow #}
    <li {{ curentPage == maxPages ? 'class="page-item disabled"' }}>
        <a class="page-link" href="{{ path('doctor', {page: curentPage+1 <= maxPages ? curentPage+1 : curentPage}) }}">»</a>
    </li>
    </nav>
</ul>
{% endif %}