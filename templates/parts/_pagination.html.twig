<style>
.disabled{
  display:none;
}
</style>

{% if maxPages > 1 %}
{% set current_path = app.request.get('_route') %}
<nav aria-label="..." class="mr-5 mt-5">
<ul class="pagination">
    {# `«` arrow  #}
    <li {{ curentPage == 1 ? 'class="page-item disabled"' : 'class="page-item"'  }}>
        <a class="page-link" href="{{ path(current_path, {page: curentPage-1 < 1 ? 1 : curentPage-1}) }}">«</a>
    </li>

    {# Render each page number #}
    {% for i in 1..maxPages %}
    <li {{ curentPage == i ? 'class="page-item active"' }}>
    <a class="page-link" href="{{ path(current_path, {page: i}) }}">{{ i }}</a>
    </li>
    {% endfor %}

    {# `»` arrow #}
    <li {{ curentPage == maxPages ? 'class="page-item disabled"' }}>
        <a class="page-link" href="{{ path(current_path, {page: curentPage+1 <= maxPages ? curentPage+1 : curentPage}) }}">»</a>
    </li>
    </nav>
</ul>
{% endif %}